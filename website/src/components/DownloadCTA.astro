<style>
  .cta {
    padding: 100px 0;
    text-align: center;
    position: relative;
    background: var(--accent-bg);
  }
  .cta-glow {
    width: 600px;
    height: 600px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
  .cta-inner {
    position: relative;
    z-index: 1;
  }
  h2 {
    font-size: 44px;
    font-weight: 800;
    letter-spacing: -0.5px;
    margin-bottom: 16px;
    color: var(--text-primary);
  }
  .accent { color: var(--accent); }
  .cta p {
    font-size: 18px;
    color: var(--text-secondary);
    margin-bottom: 32px;
  }
  .cta-buttons {
    display: flex;
    gap: 12px;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    h2 { font-size: 28px; }
    .cta p { font-size: 16px; }
  }
</style>
